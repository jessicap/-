.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #000;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
 
.userinfo text {
  font-size: 14px;
  background-color: #c0c0c0;
  border-radius:40%;
  color:#c0c0c0;
}


.countCal{
  width:180px;
  margin:30px;
  margin-top: 60px;
  font-size:15px;
  background-color: rgb(247, 212, 59);

}

.footermotto{
  position: fixed;
  bottom:0px;
  left:0px;
  width: 100%;
  height:20px;
  margin:10px;
  text-align: center;
  font-size: 14px;
  color:#999;
}